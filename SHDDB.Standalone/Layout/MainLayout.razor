@inherits LayoutComponentBase

<MudThemeProvider Theme="CustomTheme" @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Dense="true" Elevation="24">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">SHDDB</MudText>
        <MudSpacer />
        <MudTooltip Text="Raise a bug" Color="Color.Error" Placement="Placement.Bottom">
            <MudIconButton Icon="@Icons.Material.Filled.BugReport" Color="Color.Inherit" Edge="Edge.End" Href="https://github.com/mojoex/SHDDB/issues" />
        </MudTooltip>
        <MudTooltip Text="View the source code" Color="Color.Info" Placement="Placement.Bottom">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Edge="Edge.End" Href="https://github.com/mojoex/SHDDB" />
        </MudTooltip>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="24" Variant="DrawerVariant.Responsive">
        <MainNavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Fixed>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true; 
    private bool _isDarkMode;
    private MudThemeProvider _mudThemeProvider;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemPreference();
            StateHasChanged();
        }
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme CustomTheme = new()
        { 
            PaletteLight = new()
            {
                
            },
            PaletteDark = new()
            {

            },
            Shadows = new()
            {

            },
            Typography = new()
            {

            },
            LayoutProperties = new()
            {
                
            }
        };
}

